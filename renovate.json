{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "dependencies"
  ],
  "baseBranches": [
    "master"
  ],
  "commitMessageAction": "⬆️ Bump",
  "extends": [
    "config:best-practices",
    "schedule:weekly",
    ":dependencyDashboard"
  ],
  "commitMessageTopic": "{{depName}}",
  "forkProcessing": "enabled",
  "prConcurrentLimit": 1,
  "rebaseWhen": "never",
  "packageRules": [
    {
      "matchCategories": [
        "php"
      ],
      "addLabels": [
        "php"
      ]
    },
    {
      "matchCategories": [
        "js"
      ],
      "addLabels": [
        "javascript"
      ]
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin"
      ]
    },
    {
      "groupName": "Bud",
      "matchPackagePrefixes": [
        "@roots/"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "groupName": "Alpine.js",
      "matchPackagePrefixes": [
        "alpinejs",
        "@alpinejs/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "npm"
      ]
    },
    {
      "matchManagers": [
        "composer"
      ],
      "addLabels": [
        "composer"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "patch"
      ]
    }
  ],
  "hostRules": [
    {
      "matchHost": "composer.triggerfish.cloud",
      "hostType": "packagist",
      "username": "composer",
      "encrypted": {
        "password": ""
      }
    }
  ],
  "timezone": "Europe/Stockholm"
}
